<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_weight="10"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:transitionName="@string/sharedElement1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/issueHeader"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/user_primary_dark_o"
                    />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/optionsIconContainer"
                    android:layout_toRightOf="@+id/profilePic"
                    android:gravity="center_vertical"
                    android:minHeight="70dp"
                    android:text="Anonymous"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    />

                <RelativeLayout
                    android:id="@+id/optionsIconContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_drawable"
                    android:clickable="true"
                    >

                    <ImageView
                        android:id="@+id/optionsIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="20dp"
                        android:src="@mipmap/options_primary_dark"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <co.thnki.whistleblower.view.SquareImageView
                    android:id="@+id/issueImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_img"
                    />

                <RelativeLayout
                    android:id="@+id/editPlaceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/areaTypeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="20dp"
                        android:paddingEnd="50dp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:text="@string/placeName"
                        />
                </RelativeLayout>

                <View
                    android:id="@+id/viewDivider2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="#ccc"/>

                <LinearLayout
                    android:id="@+id/description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="3"
                    >

                    <LinearLayout
                        android:id="@+id/locationContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_drawable"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/locationIcon"
                            android:layout_width="@dimen/issue_action_icon_size"
                            android:layout_height="@dimen/issue_action_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/issue_action_icon_margin"
                            android:src="@mipmap/map_marker_icon_accent"
                            />

                        <TextView
                            style="@style/issue_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Map"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/shareContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_drawable"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/shareIcon"
                            android:layout_width="@dimen/issue_action_icon_size"
                            android:layout_height="@dimen/issue_action_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/issue_action_icon_margin"
                            android:src="@mipmap/share_icon_accent"
                            />

                        <TextView
                            style="@style/issue_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Share"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/volunteerContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_drawable"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/volunteerIcon"
                            android:layout_width="@dimen/issue_action_icon_size"
                            android:layout_height="@dimen/issue_action_icon_size"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/issue_action_icon_margin"
                            android:src="@mipmap/volunteer_accent"
                            />

                        <TextView
                            style="@style/issue_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Volunteer"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ddd"/>
</LinearLayout>
